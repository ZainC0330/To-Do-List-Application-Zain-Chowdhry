<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#68D7D7D7"
    android:orientation="vertical"
    tools:context=".NewTaskSheet"
    tools:ignore="ExtraText">

    <ImageButton
        android:id="@+id/Cancel"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_gravity="right"
        android:background="@null"
        android:src="@drawable/baseline_cancel_24"
        app:tint="#FF0000" />

    <TextView
        android:id="@+id/taskTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sofiaproregular"
        android:text="New Task"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/justsans"
            android:hint="Name (Required)"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/justsans"
            android:hint="Description"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/dueDate"
        android:layout_width="169dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text="Date"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="@drawable/calendar_24"
        app:iconSize="32dp"
        app:iconTint="#FFFFFF" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"

        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text=""
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/dueTime"
        android:layout_width="169dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text="Time"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="@drawable/time_24"
        app:iconSize="32dp"
        app:iconTint="#FFFFFF" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"

        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text=""
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="?attr/colorPrimary" />

    <Button
        android:id="@+id/clear"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:gravity="center"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIncomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/sofiaproregular"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>